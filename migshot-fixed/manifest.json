{
  "manifest_version": 3,
  "name": "MIGShot",
  "version": "6.13.1",
  "description": "Marshall Investigative Group - Professional content capture tool for any website. Â© 2025 Anthony Klarich",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "clipboardWrite",
    "storage",
    "unlimitedStorage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "capture-post": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Capture area with selection tool"
    },
    "rolling-capture": {
      "suggested_key": {
        "default": "Shift+Alt+S",
        "mac": "Shift+Alt+S"
      },
      "description": "Rolling capture - automatic scrolling"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["editor.html", "editor.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
